            <div class="card text-white bg-dark  border-info mb-3" id="chatWrapp">
              <div class="card-header">Chat</div>
              <div class="card-body text-info">
                <form method="POST" action="/chat-message">
                  <div class="form-group">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input name="message" type="text" class="form-control" id="text" aria-describedby="emailHelp"
                      placeholder="type message">

                  </div>
                </form>
                <ul id="chat">
                  <% for(var i = 0; i<message.length; i++) { %>
                  <li id="chatMessage">
                    <img src="<%= message[i].from.img%>" alt='messageAvatar'> <a href="/profile/<%= message[i].from._id %>">
                      <% if(message[i].from.isAdmin) { %>
                      <img style="width:15px;height:15px" src="http://www.pngpix.com/wp-content/uploads/2016/10/PNGPIX-COM-Gold-Star-PNG-Transparent-Image-500x500.png"
                        alt="admin" title="Admin">
                      <% } %><span>
                        <%= message[i].from.username%> <span class="float-right" style="margin-right:10px;color:rgba(255,255,255,0.5);font-size:12px;"><i
                            class="far fa-clock"></i>
                          <%=message[i].time%></span></span></a>
                    <p>
                      <%= message[i].message %>
                    </p>
                  </li>
                  <% } %>
                </ul>
              </div>
            </div>


